<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/caesar_cipher_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@color/grayscale"
    tools:context="com.example.codestranslator.MainActivity">
    <TextView
        android:id="@+id/Caesardyk"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="Caesar's Cipher - CLICK here to learn more"
        android:textColor="@color/gray"/>
    <EditText
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:hint="Insert text"
        android:layout_centerHorizontal="true"
        android:autofillHints="" />

    <EditText
        android:id="@+id/txt33"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:hint="Shift"
        android:autofillHints="" />

    <LinearLayout
        android:id="@+id/ctrls3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt3"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/toAlphaBtn3"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:text="Convert To Text"
            app:backgroundTint="@color/gray"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/toCaesarBtn"
            android:layout_width="140dp"
            android:layout_height="70dp"
            android:layout_marginTop="23dp"
            android:text="Convert To Caesar's Cipher"
            app:backgroundTint="@color/gray" />
    </LinearLayout>

    <ScrollView
        android:layout_width="378dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/result3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctrls3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/dimgray"
            android:textSize="22sp" />
    </ScrollView>
</RelativeLayout>





